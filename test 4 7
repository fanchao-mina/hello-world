#include <stdio.h>
int main()
{
	printf("hello world\n");
	return 0;
}




#include <stdio.h>
int main()
{
	char ch = 'a';//内存
	printf("%c\n", ch);//%c--打印字符格式的数据
	return 0;
}




#include <stdio.h>
int main()
{
	int age = 20;
	printf("%d\n", age);//%d--打印整形十进制数据
	return 0;
}





int main()
{
	printf("%d\n", sizeof(char));// 1字节
	printf("%d\n", sizeof(short));// 2
	printf("%d\n", sizeof(int));// 4
	printf("%d\n", sizeof(long));// 4/8
	printf("%d\n", sizeof(long long));// 8
	printf("%d\n", sizeof(float));// 4
	printf("%d\n", sizeof(double));// 8
	return 0;
}


int main（）
{
	//年龄
	//20
	short int = 20;//向内存申请2个字节=16bit位，用来存放20
	float weight = 95.6f;//向内存申请4个字节存放95.6
	return 0;
}


int main()
{
	int num1 = 10;//局部变量-定义在代码块（{}）之内的变量
	//局部变量和全局变量名字建议不要相同-容易误会，产生bug
	//当局部变量和全局变量的名字相同的时候，局部变量优先
	return 0;
}





int main()
{
	//计算两个数的和
	int num1 = 0;
	int num2 = 0;
	int sum = 0;
	
    //输入数据-使用输入函数scanf
	scanf_s("%d%d", &num1, &num2);//取地址符号&
	//c语言语法规定，变量要定义在当前代码块的最前面
	sum = num1 + num2;
	printf("sum = %d\n", sum);
	return 0;
}
