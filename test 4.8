int main()
{
	int cut = 5;
	printf("num = %d\n", cut);
	return 0;
}



int main()
{
	{
		int cut = 5;
	}
	printf("num = %d\n", cut);   //不能编译成功，局部变量只在局部的{}内有用
	return 0;
}





int main()
{
	//局部变量的作用域
	int cut = 5;
	{
		printf("num = %d\n", cut);
	}
	return 0;
}

